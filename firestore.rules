
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Regra Padrão: Negar leitura e escrita para todos por padrão.
    // Acesso só é concedido se uma regra mais específica abaixo permitir.
    match /{document=**} {
      allow read, write: if false;
    }

    // A coleção 'authorizedUsers' pode ser lida por qualquer pessoa para
    // verificar a autorização de e-mail antes do login completo ser processado pela aplicação.
    // A escrita continua restrita.
    match /authorizedUsers/{userId} {
      allow read: if true;
      allow write: if request.auth != null; // Apenas usuários autenticados podem escrever
    }
    
    // O documento de configurações de manutenção pode ser lido por qualquer um
    // para que a aplicação possa verificar o status antes do login.
    match /settings/maintenance {
      allow read: if true;
      allow write: if request.auth != null; // Apenas usuários autenticados podem alterar
    }

    // Acesso geral para coleções principais - apenas para usuários autenticados.
    match /collaborators/{collaboratorId} {
      allow read, write: if request.auth != null;
    }
    match /businessAreas/{areaId} {
      allow read, write: if request.auth != null;
    }
    match /initiatives/{initiativeId} {
      allow read, write: if request.auth != null;
    }
    match /kpis/{kpiId} {
      allow read, write: if request.auth != null;
    }
    match /okrs/{okrId} {
      allow read, write: if request.auth != null;
    }
    match /recurringMeetings/{meetingId} {
      allow read, write: if request.auth != null;
    }
    
    // Coleções específicas do usuário (Notas e Tarefas)
    // Apenas o próprio usuário pode acessar seus dados.
    match /notes/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    match /tasks/{taskId} {
       allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    match /auditLogs/{logId} {
        allow read, write: if request.auth != null;
    }
  }
}
