rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Regra 1: Permite leitura pública para configurações e autorização, necessário para a tela de login.
    // A escrita permanece protegida.
    match /settings/{docId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /authorizedUsers/{userId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Regra 2: Para todos os outros documentos (initiatives, collaborators, tasks, etc.),
    // exige que o usuário esteja autenticado para ler ou escrever.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
