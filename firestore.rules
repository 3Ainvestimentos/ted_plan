rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Regra Padrão: Negar leitura e escrita para todos por padrão.
    // Acesso só é concedido se uma regra mais específica abaixo permitir.
    match /{document=**} {
      allow read, write: if false;
    }

    // A coleção 'authorizedUsers' pode ser lida por qualquer pessoa para
    // verificar a autorização de e-mail antes do login completo ser processado pela aplicação.
    // A escrita é proibida.
    match /authorizedUsers/{userId} {
      allow read: if true;
      allow write: if false;
    }
    
    // A coleção 'collaborators' pode ser lida por qualquer usuário autenticado.
    // A escrita também exige autenticação (gerenciada pela app).
    match /collaborators/{collaboratorId} {
      allow read, write: if request.auth != null;
    }

    // A configuração de manutenção pode ser lida por qualquer um para
    // a verificação inicial do app, mas só pode ser escrita por usuários autenticados.
    match /settings/maintenance {
        allow read: if true;
        allow write: if request.auth != null;
    }

    // Para todas as outras coleções gerais, apenas usuários autenticados (logados)
    // podem ler ou escrever dados.
    match /businessAreas/{areaId} {
      allow read, write: if request.auth != null;
    }
    match /initiatives/{initiativeId} {
      allow read, write: if request.auth != null;
    }
    match /kpis/{kpiId} {
      allow read, write: if request.auth != null;
    }
    match /okrs/{okrId} {
      allow read, write: if request.auth != null;
    }
    match /recurringMeetings/{meetingId} {
      allow read, write: if request.auth != null;
    }
     match /settings/{settingId} {
      allow read, write: if request.auth != null;
    }

    // Coleções específicas do usuário (Notas e Tarefas)
    // Apenas o próprio usuário pode acessar seus dados.
    match /notes/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /tasks/{taskId} {
       // Leitura, atualização e exclusão: o userId no documento deve corresponder ao usuário logado.
       allow read, update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
       // Criação: o userId nos novos dados deve corresponder ao usuário logado.
       allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
    match /auditLogs/{logId} {
        allow read, write: if request.auth != null;
    }
  }
}
